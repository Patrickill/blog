---
import Github from "./icons/Github.astro";
import qq from "./icons/qq.astro";
import wx from "./icons/wx.astro";
const components = {
  github: Github,
  wx: wx,
  qq: qq,
};

type Props = {
  kind: keyof typeof components;
  href: string | undefined;
  size?: number;
};

const { kind, href, size = 8 } = Astro.props;
const SocialSvg = components[kind];
---

<a
  class="text-sm text-gray-500 transition hover:text-gray-600"
  target="_blank"
  rel="noopener noreferrer"
  href={href}
>
  <span class="sr-only">{kind}</span>
  <SocialSvg
    class={`fill-current text-gray-700 hover:text-primary-500 dark:text-gray-200 dark:hover:text-primary-400 h-${size} w-${size}`}
  />
</a>
